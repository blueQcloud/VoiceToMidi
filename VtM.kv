#:kivy 2.0.0

<SlightSmoothButton@Button>:
	background_color: (0,0,0,0)
	background_normal: ''
	back_color: (1,0,1,1)
	border_radius: [100]

	canvas.before:
		Color:
			rgba: root.back_color
		RoundedRectangle:
			size: root.size
			pos: root.pos
			radius: root.border_radius


<SmoothButton@Button>:
	background_color: (0,0,0,0)
	background_normal: ''
	back_color: (1,0,1,1)
	border_radius: [100]

	canvas.before:
		Color:
			rgba: root.back_color
		RoundedRectangle:
			size: root.size
			pos: root.pos
			radius: root.border_radius

<RoundButton@Button>:
	background_color: (0,0,0,0)
	background_normal: ''
	back_color: (1,0,1,1)
	border_radius: [100]

	canvas.before:
		Color:
			rgba: root.back_color
		RoundedRectangle:
			size: root.size
			pos: root.pos
			radius: root.border_radius

<NoFileFed>:
	Label:
		text: 'You haven\'t selected a file yet,\nplease try again'
		size_hint: (0.5, 0.3)
		pos_hint: {'x': 0.25, 'y': 0.35}

<Error>:
	Label:
		text: 'This is not a wav file, \n please try again'
		size_hint: (0.5, 0.3)
		pos_hint: {'x': 0.25, 'y': 0.35}

<BrowseFile>:
	cols: 1
	id: browse
	BoxLayout:
		orientation: 'vertical'
		size_hint: (0.9, 0.8)
		pos_hint: {'x': 0.1, 'y': 0.1}
		spacing: 30

		FileChooserIconView:
			id: filechooser
			size_hint_y: 0.5
		
		Button:
			id: browsebtn
			size_hint_y: 0.2
			pos_hint: {'x': -0.05, 'y': -0.5}
			text: 'Open'
			on_release: browse.F(filechooser.selection)

<MainMenu>:
	orientation: 'vertical'
	padding: 30
	spacing: 20
	id: main

	SlightSmoothButton:
		id: btn1

		back_color: (0.3, 0.3, 0.3, 1)
		on_press: root.new(self)
		on_release: 
			root.show_popup()
			root.old(self)

		text: 'Open File'
        font_size: '50sp'


	SmoothButton:
		id: btn2
		pos_hint: {'y': 0.1}
		back_color: 0.4, 0.9, 0.5, 0.8
		text: 'Convert'
		font_size: '50sp'

		on_press: root.new(self)
		on_release:
			main.convert()
			root.old(self)


	RoundButton:
		id: btn3
		pos_hint: {'y': 0.1}
		back_color: 0.9, 0.1, 0.3, 1
		text: 'Play'
		font_size: '50sp'

		n_press: root.new(self)
		on_release:
			main.playSound()
			root.old(self)
